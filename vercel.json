{
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "https://www.sam2i.fr/$1",
      "has": [
        {
          "type": "host",
          "value": "!www.sam2i.fr"
        },
        {
          "type": "protocol",
          "value": "http"
        }
      ],
      "status": 301
    },
    {
      "source": "/(.*)\\.html",
      "destination": "/$1",
      "has": [
        {
          "type": "request",
          "key": "User-Agent",
          "value": "Mozilla"
        }
      ],
      "status": 301
    },
    {
      "source": "/(.*)\\.xml",
      "destination": "/$1",
      "has": [
        {
          "type": "request",
          "key": "User-Agent",
          "value": "Mozilla"
        }
      ],
      "status": 301
    },
    {
      "source": "/(.*)\\.html",
      "destination": "/$1.html"
    },
    {
      "source": "/(.*)\\.xml",
      "destination": "/$1.xml"
    }
  ]
}